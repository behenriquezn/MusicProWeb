    <h2 class="text-info">Product Details</h2>
    <form asp-action="Detalles" method="post" enctype="multipart/form-data">
        <div class="p-4 rounded border row">
            <div asp-validation-summary="ModelOnly" class="text-danger">

            </div>
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Nombre"></label>
                    </div>
                    <div class="col-8">
                        <input type="hidden" asp-for="IdProd" />
                        <input asp-for="Nombre" readonly="readonly" class="form-control" />
                    </div>
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Precio"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Precio" readonly="readonly" class="form-control" />
                    </div>
                    <span asp-validation-for="Precio" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="SubCat"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="SubCat.Nombre" readonly="readonly" class="form-control" />
                    </div>
                    <span asp-validation-for="SubCatId" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Categoria"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Categoria.Categorias" readonly="readonly" class="form-control" />
                    </div>
                    <span asp-validation-for="CategoriaId" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Marca"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Marca.Nombre" readonly="readonly" class="form-control" />
