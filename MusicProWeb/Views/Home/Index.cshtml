@using MusicProWeb.Models;
@model List<Producto>;
@{
    ViewData["Title"] = "Home Page";
}

<html lang="en">
<body>
    <!-- Section-->
    <section class="py-5">
        <div class="container px-4 px-lg-5 mt-5">
            <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
                @foreach (var producto in Model)
                {
                    <div class="col mb-5">
                        <div class="card h-100">
                            <!-- Sale badge-->
                            <div class="badge bg-dark text-white position-absolute" style="top: 0.5rem; right: 0.5rem">Sale</div>
                            <!-- Product image-->
                            <img src="@("~/image/"+producto.Imagen)" asp-append-version="true" style="width: 220px; height: 220px; " />
                            <!-- Product details-->
                            <div class="card-body p-4">
                                <div class="text-center">
                                    <!-- Product name-->
                                    <h5 class="fw-bolder">@producto.Nombre</h5>
                                    <!-- Product price-->
                                    @producto.Precio

                                </div>
                            </div>
                            <!-- Product actions-->
                            <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                                <div class="text-center">
                                    <a asp-action="Detalles" asp-controller="Home" asp-route-id="@producto.IdProd" class="btn btn-outline-dark mt-auto">Detalle</a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
   
</body>
</html>
